# .env.example

# Chave secreta para segurança do Flask (cookies, etc.)
# Em produção, use um valor longo e aleatório.
SECRET_KEY='your-secret-key-here'

# URL de conexão para o seu banco de dados PostgreSQL
# Formato: postgresql://[USUARIO]:[SENHA]@[HOST]:[PORTA]/[NOME_DO_BANCO]
DATABASE_URL='postgresql://username:password@localhost:5432/database_name'

# Configurações do servidor Flask
FLASK_HOST='0.0.0.0'
FLASK_PORT='5001'
FLASK_DEBUG='True'

# Configurações de CORS (URLs separadas por vírgula)
CORS_ORIGINS='http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000'

# Configurações do AWS SES para envio de emails
SES_REGION='us-east-1'
SES_SENDER_EMAIL='noreply@yourdomain.com'
