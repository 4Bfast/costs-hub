# .env

# Chave secreta para segurança do Flask (cookies, etc.)
# Em produção, use um valor longo e aleatório.
SECRET_KEY='super-secret-key-for-dev'

# URL de conexão para o seu banco de dados PostgreSQL local
# Formato: postgresql://[USUARIO]:[SENHA]@[HOST]:[PORTA]/[NOME_DO_BANCO]
DATABASE_URL='postgresql://postgres:admin@localhost:5432/costs_huby_db_mvp'

# Configurações do servidor Flask
FLASK_HOST='0.0.0.0'
FLASK_PORT='5001'
FLASK_DEBUG='True'

# Configurações de CORS
CORS_ORIGINS='http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000'

# Configurações do AWS SES para envio de emails
SES_REGION='us-east-1'
SES_SENDER_EMAIL='noreply@costshub.com'
# Nota: O email acima deve ser verificado no AWS SES antes de usarCOSTSHUB_AWS_ACCOUNT_ID=123456789012
